{
  "server": {
    "port": 3000,
    "env": "development",
    "cors": {
      "origin": ["http://localhost:5173", "http://localhost:80", "https://localhost"],
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedHeaders": ["Content-Type", "Authorization"],
      "credentials": true
    }
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "municipal_waste",
    "user": "postgres",
    "password": "your_secure_password",
    "max": 20,
    "idleTimeoutMillis": 30000,
    "connectionTimeoutMillis": 2000
  },
  "jwt": {
    "secret": "your_jwt_secret_key_change_in_production",
    "expiresIn": "24h"
  },
  "logging": {
    "level": "info",
    "format": "combined"
  },
  "maps": {
    "defaultCenter": [-1.292066, 36.821945],
    "defaultZoom": 12,
    "maxZoom": 18,
    "minZoom": 8,
    "tileLayer": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
  },
  "rateLimit": {
    "windowMs": 900000,
    "max": 100,
    "authWindowMs": 900000,
    "authMax": 5
  },
  "security": {
    "bcryptRounds": 12,
    "sessionTimeout": "24h",
    "maxFileSize": "10mb"
  },
  "reports": {
    "maxRecords": 10000,
    "defaultDateRange": 30,
    "supportedFormats": ["csv", "json"]
  }
}
